@model Application.ViewModels.SiteSide.Account.ActiveMobileByActivationCodeViewModel

@{
    ViewData["Title"] = "ثبت نام ";
    Layout = null;
    var Time = ViewBag.Time;
}


<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <title>ثبت نام </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Premium Bootstrap 5 Landing Page Template" />
    <meta name="keywords" content="Saas, Software, multi-uses, HTML, Clean, Modern" />
    <meta name="author" content="JafarAbbasi" />
    <meta name="email" content="jabasi26@gmail.com" />
    <meta name="website" content="https://www.rtl-theme.com/author/tn_plugin/" />
    <meta name="Version" content="v3.0.0" />
    <!-- favicon -->
    <link rel="shortcut icon" href="images/favicon.ico">
    <!-- Bootstrap -->
    <link href="/Landrick/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons -->
    <link href="/Landrick/css/materialdesignicons.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/Landrick/unicons.iconscout.com/release/v3.0.6/css/line.css">
    <!-- Main Css -->
    <link href="/Landrick/css/style.min.css" rel="stylesheet" type="text/css" id="theme-opt" />
    <link href="/Landrick/css/colors/default.css" rel="stylesheet" id="color-opt">

    <link href="/common/notification/notifications.css" rel="stylesheet" />
    <link href="/common/sweetalert/sweetalert.css" rel="stylesheet" />
    <link href="/common/custom/custom.css" rel="stylesheet" />

    <style>
        .jst-hours {
            float: left;
        }

        .jst-minutes {
            float: left;
        }

        .jst-seconds {
            float: left;
        }

        .jst-clearDiv {
            clear: both;
        }

        .jst-timeout {
            color: red;
        }
    </style>

</head>

<body>


    <div class="back-to-home rounded d-none d-sm-block">
        <a href="/" class="btn btn-icon btn-primary"><i data-feather="home" class="icons"></i></a>
    </div>

    <!-- شوع آن -->
    <section class="cover-user bg-white">
        <div class="container-fluid px-0">
            <div class="row g-0 position-relative">
                <div class="col-lg-4 cover-my-30 order-2">
                    <div class="cover-user-img d-lg-flex align-items-center">
                        <div class="row">
                            <div class="col-12">
                                <div class="card border-0" style="z-index: 1">
                                    <div class="card-body p-0">
                                        <h4 class="card-title text-center">ثبت نام </h4>
                                        <form method="post" asp-area="" asp-controller="Account" asp-action="ActiveUserByMobileActivationCode">

                                            <input type="hidden" asp-for="Mobile" value=@ViewBag.Mobile />

                                            @if (User.Identity.IsAuthenticated && Context.Request.Query["ReturnUrl"] != "")
                                            {
                                                <div class="alert alert-danger mt-3">
                                                    <p>کاربر گرامی @User.Identity.Name  شما مجوز ورود به بخش درخواست شده را ندارید.</p>
                                                </div>

                                            }

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="mb-3">
                                                        <label class="form-label">کد فعالسازی ارسال شده  <span class="text-danger">*</span></label>
                                                        <div class="form-icon position-relative">
                                                            <i data-feather="user" class="fea icon-sm icons"></i>
                                                            <input type="text" class="form-control ps-5" placeholder=" کد فعالسازی ارسال شده  " asp-for="MobileActiveCode" required="">
                                                            <span style="color:red" asp-validation-for="MobileActiveCode"></span>

                                                        </div>
                                                    </div>
                                                </div><!--end col-->

                                                <div class="col-md-12">
                                                    <div class="mb-3">
                                                        <div class="remember-me-wrap" style="margin-left:50px;">
                                                            <p class="timerCounter" data-seconds-left="@Time" id="timer"></p>
                                                        </div>
                                                    </div>
                                                </div><!--end col-->

                                                <div class="col-md-12">
                                                    <div class="d-grid">
                                                        <button class="btn btn-primary">تایید </button>
                                                    </div>
                                                </div><!--end col-->


                                                <div class="col-md-12 mt-3">
                                                    <div class="d-grid">
                                                        <a id="SMS" asp-area="" asp-controller="Account" asp-action="ActiveUserByMobileActivationCode" asp-route-Mobile="@ViewBag.Mobile" asp-route-Resend="true" class="btn btn-primary" style="display: none">
                                                            <span> ارسال مجدد کد  </span>
                                                            </a>
                                                    </div>
                                                </div><!--end col-->

                                            </div><!--end row-->
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div><!--end row-->
                    </div> <!-- end about detail -->
                </div> <!-- end col -->

                <div class="col-lg-8 offset-lg-4 padding-less img order-1" style="background-image:url('/Landrick/images/user/02.jpg')" data-jarallax='{"speed": 0.5}'></div><!-- end col -->
            </div><!--end row-->
        </div><!--end container fluid-->
    </section><!--end section-->
    <!-- پایان آن -->
    <!-- end Style switcher -->
    <!-- javascript -->
    <script src="/Landrick/js/bootstrap.bundle.min.js"></script>
    <!-- Icons -->
    <script src="/Landrick/js/feather.min.js"></script>
    <!-- Switcher -->
    <script src="/Landrick/js/switcher.js"></script>
    <!-- Main Js -->
    <script src="/Landrick/js/plugins.init.js"></script><!--Note: All init js like tiny slider, counter, countdown, maintenance, lightbox, gallery, swiper slider, aos animation etc.-->
    <script src="/Landrick/js/app.js"></script><!--Note: All important javascript like page loader, menu, sticky menu, menu-toggler, one page menu etc. -->
    <!--====== BACK TO TOP PART ENDS ======-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!--Add By Developer-->

    <script src="~/common/notification/notifications.js"></script>
    <script src="~/common/sweetalert/sweetalert.js"></script>
    <script src="~/common/custom/custom.js"></script>

    <partial name="_ValidationScriptsPartial" />

    <script src="~/common/Simple-Countdown-Timer-Plugin-jQuery/jquery.simple.timer.js"></script>
    <script src="~/common/Simple-Countdown-Timer-Plugin-jQuery/examples/bundle.js"></script>
    <script src="~/common/Simple-Countdown-Timer-Plugin-jQuery/examples/dojo.js"></script>
    <partial name="_Notification" />

    <script>
        $(function () {

            $("#timer").startTimer({
                onComplete: function () {
                    $("#SMS").css({ 'display': 'block' });
                    $("#timer").css({ 'display': 'none' });
                }
            });

        });
    </script>




</body>

</html>