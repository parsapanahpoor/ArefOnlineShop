                                            <p class="text-[#565656] text-[12px] leading-[22.49px] lg:text-[14px] lg:leading-[26.24px]" style="font-family: yekanBakhtRegular">
                                                @comment.CommentBody
                                            </p>
                                        </div>
                                    </div>

                                    @if (Model.Comments.Any(s => s.ParentId == comment.CommentId))
