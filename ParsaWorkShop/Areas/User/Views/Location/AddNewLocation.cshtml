<main class="mx-auto mt-7 mb-7">
    <section class="mx-auto max-w-full grid grid-cols-1 lg:max-w-[86.5em] relative lg:flex lg:items-start gap-5">

        <!-- Side Bar -->
        @await Component.InvokeAsync("UserPanelSideBarViewComponents")

        <!-- ---------------------- main content ----------------------------------------- -->
        <div class="w-full lg:flex min-h-[765px]">
            <!-- ----- userInfo ----- -->
            <section id="userInfo" class="tabcontent w-full h-full flex flex-col items-center justify-start">

                <div class="border-2 border-[#252525] w-full h-full p-5 flex flex-col items-start justify-start gap-5">
                    <div class="w-full flex justify-between items-center">
                        <div>
                            <p class="text-[14px]" style="font-family: yekanBakhtExtraBold">
                                افزودن آدرس جدید
                            </p>
                            <p class="text-[12px] text-[#828282]">Add New Address</p>
                        </div>
                    </div>



                    <form asp-action="EditUser" class="w-full" asp-controller="Account" asp-area="User" method="post" enctype="multipart/form-data">
                       @* <input type="hidden" asp-for="AvatarName" />*@

                        <div class="w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-5">

