@model Domain.Models.Users.Locations
@{
    ViewData["Title"] = "ویرایش نشانی  ";
}

<div class="col-lg-8 col-12">
    <div class="card border-0 rounded shadow">
        <div class="card-body">
            <form method="post" asp-action="EditLocation" asp-controller="Location" asp-area="User">
                <input type="hidden" asp-for="LocationID" />
                <input type="hidden" asp-for="UserID" />
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label class="form-label"> کدپستی </label>
                            <div class="form-icon position-relative">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user fea icon-sm icons"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                                <input asp-for="PostalCode" id="first" type="text" class="form-control ps-5" placeholder=" کدپستی :">
                            </div>
                        </div>
                    </div><!--end col-->


                </div><!--end row-->
                <div class="col-lg-12">
                    <div class="mb-3">
                        <label class="form-label">آدرس </label>
                        <div class="form-icon position-relative">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-circle fea icon-sm icons"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
                            <textarea asp-for="LocationAddress" id="comments" rows="4" class="form-control ps-5" placeholder="آدرس :"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input type="submit" id="submit" class="btn btn-primary" value="ذخیره تغییرات">
                    </div><!--end col-->
                </div><!--end row-->
            </form>
        </div>
    </div>


</div>