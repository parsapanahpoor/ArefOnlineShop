@model Domain.Models.ContactUs.ContactUs
@{
    ViewData["Title"] = "اطلاعات ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper" style="min-height: 805px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>اطلاعات   پیام     </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin">خانه</a></li>
                        <li class="breadcrumb-item active">اطلاعات  پیام      </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
  


        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">اطلاعات پیام      </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div role="form" asp-action="Create" asp-controller="Users" asp-area="Admin">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> نام کامل        </label>
                                        <input type="text" readonly asp-for="UserName" class="form-control" id="exampleInputEmail1">
                                        <span asp-validation-for="UserName" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> شماره تلفن     </label>
                                        <input type="text" readonly asp-for="PhoneNumber" class="form-control" id="exampleInputEmail1" placeholder="سمت کارمند  را وارد کنید">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> ایمیل    </label>
                                        <textarea rows="2" readonly asp-for="Email" class="form-control" id="exampleInputEmail1" placeholder="توضیح درباره ی را وارد کنید"></textarea>
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> عنوان      </label>
                                        <input type="text" readonly asp-for="ShortDescription" class="form-control" id="exampleInputEmail1" placeholder="لینک تصویر را وارد کنید">
                                        <span asp-validation-for="ShortDescription" class="text-danger"></span>

                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> متن       </label>
                                        <textarea rows="5" type="text" readonly asp-for="LongDescription" class="form-control" id="exampleInputEmail1" placeholder="لینک تصویر را وارد کنید"></textarea>
                                        <span asp-validation-for="LongDescription" class="text-danger"></span>

                                    </div>



                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
          


                                    <a asp-action="Contactus" asp-controller="Home" asp-area="Admin" class="btn btn-primary">بازگشت به عقب </a>
                                </div>
                            </div>
                        </div>


                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->

                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>


</div>

