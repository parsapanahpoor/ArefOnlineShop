@model Domain.Models.ContactUs.ContactUs
@using Domain.Models.ContactUs;
@{
    ViewData["Title"] = "بررسی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper" style="min-height: 805px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 پیام  </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin">خانه</a></li>
                        <li class="breadcrumb-item active">بررسی پیام   </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">اطلاعات پیام   </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div role="form" asp-action="Create" asp-controller="Users" asp-area="Admin">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1"> نام و نام خانوادگی </label>
                                    <input type="text" asp-for="UserName" readonly class="form-control" id="exampleInputEmail1" placeholder="عنوان  پیام  را وارد کنید">

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1"> ایمیل کاربری </label>
                                    <input type="text" asp-for="Email" readonly class="form-control" id="exampleInputEmail1" placeholder="عنوان  پیام  را وارد کنید">

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1"> موبایل کاربر </label>
                                    <input type="text" asp-for="PhoneNumber" readonly class="form-control" id="exampleInputEmail1" placeholder="عنوان  پیام  را وارد کنید">

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1"> عنوان  پیام </label>
                                    <input type="text" asp-for="ShortDescription" readonly class="form-control" id="exampleInputEmail1" placeholder="عنوان  پیام  را وارد کنید">

                                </div>

                                <div class="form-group">
                                    <label for="exampleInputEmail1"> متن  پیام </label>
                                    <textarea type="text" readonly class="form-control" id="exampleInputEmail1" placeholder="عنوان  پیام  را وارد کنید"> @Model.LongDescription</textarea>

                                </div>

                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <a asp-action="ListOfContactUs" asp-controller="ContactUs" asp-area="Admin" class="btn btn-primary">بازگشت به عقب </a>
                            </div>
                        </div>
                    </div>


                </div>
                <!--/.col (left) -->
                <!-- right column -->

                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>

</div>

@section Scripts
    {
}
