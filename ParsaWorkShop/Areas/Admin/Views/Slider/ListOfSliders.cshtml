@model List<Domain.ViewModels.Admin.Slider.ListOfSliersAdminSideViewModel>
@using Application.StaticTools
@using Application.Convertors

@{
    ViewData["Title"] = "لیست اسلایدرها ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styls
    {

    <!-- DataTables -->
    <link rel="stylesheet" href="/Admin_Panel/plugins/datatables/dataTables.bootstrap4.css">

}

@section scripts{
    <!-- ./wrapper -->

    <script src="/Admin_Panel/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/Admin_Panel/plugins/datatables/dataTables.bootstrap4.js"></script>
    <!-- SlimScroll -->
    <!-- FastClick -->
    <script src="/Admin_Panel/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <!-- AdminLTE for demo purposes -->
    <!-- page script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
            });
            $('#example2').DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "autoWidth": false
            });
        });
    </script>
}

<div class="content-wrapper" style="min-height: 805px;">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>جداول اسلایدر ها </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin">خانه</a></li>
                        <li class="breadcrumb-item active">میدیرت اسلایدر ها </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">


                <div class="card ">
                    <div class="card-header">
                        <h3 class="card-title">لیست اسلایدر ها  جستجوی پیشرفته</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <a asp-action="CreateSlider" asp-area="Admin" asp-controller="Slider" class="btn btn-block btn-primary btn-sm waves-effect">افزودن اسلایدر جدید   </a>
                            </div>
                        </div>
                    </div>

                    <!-- /.card-header -->
                    @if (Model != null && Model.Any())
                    {
                        <div class="card-body">
                            <div id="example1_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                                <div class="col-sm-12">
                                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 150px;" aria-label="تصویر: activate to sort column ascending"># </th>

                                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="نویسنده: activate to sort column ascending">تصویر </th>
                                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="نویسنده: activate to sort column ascending">کد رنگ  </th>

                                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="تاریخ ایجاد    : activate to sort column ascending"> تاریخ ایجاد  </th>
                                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label=" activate to sort column ascending"></th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model)
                                            {
                                                <tr role="row" class="odd">

                                                    <td>@item.SliderId</td>

                                                    <td class="sorting_1">
                                                        <img src="/@PathTools.SliderPathThumb/@item.SliderImage" style="width:200px" class="thumbnail" />
                                                    </td>

                                                    <td>
                                                        <p>@item.ColorCode</p>

                                                    </td>
                                                    <td>

                                                        <p>@item.CreateDate.ToShamsi()</p>

                                                    </td>

                                                    <td>

                                                        <a class="badge badge-warning" asp-action="EditSlider" asp-area="Admin" asp-controller="Slider" asp-route-sliderId="@item.SliderId">
                                                            <i class="glyphicon glyphicon-edit"></i>
                                                            ویرایش
                                                        </a>

                                                        <a class="badge badge-danger" asp-action="DeleteSlider" asp-area="Admin" asp-controller="Slider" asp-route-sliderId="@item.SliderId">
                                                            <i class="glyphicon glyphicon-trash"></i>
                                                            حذف
                                                        </a>

                                                    </td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section> <!-- /.content -->
</div>





